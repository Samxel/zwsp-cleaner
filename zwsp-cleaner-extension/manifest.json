{
  "manifest_version": 3,
  "name": "ZWSP Cleaner",
  "version": "1.0.0",
  "description": "Removes zero-width and invisible Unicode characters from copied text.",
  "author": "Samxel",
  "homepage_url": "https://github.com/Samxel/zwsp-cleaner",
  "permissions": ["clipboardRead", "clipboardWrite", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
